<%- include('../layout/adminheader') %>
    <h2 class="page-title">Thêm một danh mục</h2>
    <a href="/admin/categories" class="btn btn-primary">Quay lại tất cả các danh mục</a>
    <br><br>

    <form method="POST" action="/admin/categories/add-category">
        <!-- title -->
        <div class="form-group">
            <label for="">Tiêu đề</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Tiêu đề" id="">
        </div>

        <br>

        <!-- Button -->
        <button class="btn btn-default">Hoàn thành</button>
    </form>
<%- include('../layout/adminfooter') %>