<%- include('../layout/adminheader') %>
    <h2 class="page-title">Thêm một sản phẩm</h2>
    <a href="/admin/products" class="btn btn-primary">Quay lại tất cả sản phẩm</a>
    <br><br>

    <form method="POST" action="/admin/products/add-product" enctype="multipart/form-data">
        <!-- title -->
        <div class="form-group">
            <label for="">Tiêu đề</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Tiêu đề" id="">
        </div>

        <!-- slug -->
        <div class="form-group">
            <label for="">Sắp xếp</label>
            <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Sắp xếp" id="">
        </div>

        <!-- description -->
        <div class="form-group">
            <label for="">Mô tả</label>
            <textarea class="form-control" id="ta" cols="30" rows="10" name="desc" value="<%= desc %>" placeholder="Mô tả"></textarea>
        </div>

        <!-- category -->
        <div class="form-group">
            <label for="">Danh mục</label>
            <select name="category" class="form-control">
                <% categories.forEach(cat => { %>
                    <option value="<%= cat.slug %>"><%= cat.title %></option>
                <% }) %>
            </select>
        </div>

        <!-- Price -->
        <div class="form-group">
            <label for="">Giá</label>
            <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="Giá">
        </div>

        <!-- Image -->
        <div class="form-group">
            <label for="">Hình ảnh</label>
            <input type="file" class="form-control" name="image" id="img">
            <img src="#" id="imgPreview" style="margin: 20px;">
        </div>

        <br>
        <!-- Button -->
        <button class="btn btn-default">Hoàn thành</button>
    </form>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload=function(e) {
                    $('#imgPreview').attr('src', e.target.result).width(100).height(100);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $('#img').change(function() {
            readURL(this);
        });
    </script>
<%- include('../layout/adminfooter') %>