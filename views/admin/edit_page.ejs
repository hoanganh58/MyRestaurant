<%- include('../layout/adminheader') %>
    <h2 class="page-title">Chỉnh sửa trang</h2>
    <a href="/admin/pages" class="btn btn-primary">Quay lại tất cả các trang</a>
    <br><br>

    <form method="POST" action="/admin/pages/edit-page/<%= id %>" enctype="multipart/form-data">
        <!-- title -->
        <div class="form-group">
            <label for="">Tiêu đề</label>
            <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="Tiêu đề">
        </div>

        <!-- slug -->
        <div class="form-group">
            <label for="">Sắp xếp</label>
            <input type="text" class="form-control" name="slug" value="<%= slug %>" placeholder="Sắp xếp" id="">
        </div>

        <!-- content -->
        <div class="form-group">
            <label for="">Nội dung</label>
            <textarea class="form-control" id="ta" cols="30" rows="10" name="content" value="<%= content %>"
                placeholder="Nội dung"></textarea>
        </div>

         <!-- Image -->
         <div class="form-group">
            <label for="">Tải lên hình ảnh</label>
            <input type="file" class="form-control" name="image" id="img">
            <img src="#" id="imgPreview" style="margin: 20px;">
        </div>

        <br>
        <!-- Button -->
        <button class="btn btn-default">Hoàn thành</button>
    </form>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgPreview').attr('src', e.target.result).width(100).height(100);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $('#img').change(function () {
            readURL(this);
        });
    </script>

    <%- include('../layout/adminfooter') %>