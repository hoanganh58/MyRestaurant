<%- include('../layout/adminheader') %>

    <h2 class="page-title">Sản phẩm</h2>
    <a href="/admin/products/add-product" class="btn btn-primary">Thêm một sản phẩm mới</a>
    <br><br>
    <% if (count > 0) {%>
    <table class="table table-striped">

        <thead>
            <tr class="home">
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Danh mục</th>
                <th>Hình ảnh sản phẩm</th>
                <th>Chỉnh sửa</th>
                <th>Xóa</th>
            </tr>
        </thead>

        <tbody>
            <% products.forEach(function(product){ %>
            <tr>
                <td><%= product.title %></td>
                <td><%= parseFloat(product.price).toFixed(2) %>$</td>
                <td><%= product.category %></td>
                <td>
                    <% if (product.image=="") { %>
                    <img id="picture" src="/images/noimage.png">
                    <% } else { %>
                    <img id="picture"  src="/product_images/<%= product._id %>/<%= product.image %>">
                    <% } %>
                    <!-- <img src="<%= product.image %>"> -->
                </td>
                <!-- <td><%= product.title %></td> -->
                <td><a href="/admin/products/edit-product/<%= product._id %>">Chỉnh sửa</a></td>
                <td><a class="confirmDeletion" href="/admin/products/delete-product/<%= product._id %>">Xóa</a></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <% } else { %>
        <h3 class="text-center">Không có sản phẩm.</h3>
    <% } %>
<%- include('../layout/adminfooter') %>