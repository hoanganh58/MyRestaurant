<% include layout/header %>

<h1> Đăng kí</h1>
<form method="POST" action="/users/register">
    <div class="form-group">
        <label for="">Tên</label>
        <input type="text" name="name" class="form-control" placeholder="Tên" id="">
    </div>

    <div class="form-group">
        <label for="">Email</label>
        <input type="text" name="email" class="form-control" placeholder="Email" id="">
    </div>

    <div class="form-group">
        <label for="">Tên tài khoản</label>
        <input type="text" name="username" class="form-control" placeholder="Tên tài khoản" id="">
    </div>

    <div class="form-group">
        <label for="">Mật khẩu</label>
        <input type="password" name="password" class="form-control" placeholder="Mật khẩu" id="">
    </div>

    <div class="form-group">
        <label for="">Xác nhận mật khẩu</label>
        <input type="password" name="password2" class="form-control" placeholder="Xác nhận mật khẩu" id="">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Đăng kí</button>
</form>

<% include layout/footer %>
